<%- include('partials/header') -%>

    <div id="login-box"  class="container d-flex flex-column justify-content-center align-items-center" v-cloak>
        <div class="alert alert-warning responsive-width-20 bd-shadow text-center" role="alert"  v-show='hasInfo'>
          Please login before continue.
        </div>

        <div class="login-form bg-light pt-4 pb-2 mb-3 rounded-2 d-flex justify-content-center responsive-width-20  bd-shadow ">
            <div class="w-80 " @keyup.enter="login">
                <h6 class="h4 text-center mt-0">Log in</h6>
                

                <div class="form-group">
                  <label for="exampleInputEmail1">Email</label>
                  <input type="email" v-model="email" class="form-control py-4" >
                  
                </div>

                
                <div class="form-group">
                    <div class="d-flex">
                        <label for="exampleInputPassword1" class="flex-grow-1">Password</label>
                        <a href="/profile/account-recovery">Forgot password?</a>
                    </div>
                  <input type="password" v-model="password" class="form-control py-4">
                </div>


                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success w-100" @click="login" :disabled="isLogging">
                      <span v-show="!isLogging">Log in</span>
                      <img class="regular-image"src="pictures/loading.gif" alt="Loading" style="display: none;" v-show="isLogging">
                    </button>
                </div>

                <div class="form-group alert-warning rounded-2 p-2" v-show="infos.length > 0">
                  <li class="list-style-none" v-for="item in infos" >{{item}}</li>
                </div>
              
            </div>

              
        </div>

        <div class="alert bg-warning responsive-width-20 bd-shadow text-center" role="alert"  id='error' style="display: none;">
          
        </div>

        <div class="alert bg-light responsive-width-20 bd-shadow text-center" role="alert">
            New to here?<a href="/signup"> Create an account</a>
        </div>

        
    </div>

    <script src="/javascripts/login.js"></script>

<%- include('partials/footer') -%>

